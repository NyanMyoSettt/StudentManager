<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AddStudentController">
   <children>
      <Label alignment="CENTER" layoutX="30.0" layoutY="14.0" prefHeight="48.0" prefWidth="228.0" text="Add Student">
         <font>
            <Font size="31.0" />
         </font>
      </Label>
      <VBox layoutX="52.0" layoutY="86.0" prefHeight="359.0" prefWidth="183.0">
         <children>
            <TextField fx:id="txtName" promptText="Name">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="txtAge" promptText="Age">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="txtAddress" promptText="Address">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="txtFatherName" promptText="Father's Name">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="txtNRCNo" promptText="NRC No">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <ComboBox fx:id="cmbClassroom" prefHeight="25.0" prefWidth="163.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </ComboBox>
            <ComboBox fx:id="cmbOccupation" prefHeight="25.0" prefWidth="163.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </ComboBox>
         </children>
      </VBox>
      <Button fx:id="btnSave" layoutX="26.0" layoutY="445.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="49.0" text="Save" />
      <Button fx:id="btnCancel" layoutX="92.0" layoutY="445.0" mnemonicParsing="false" text="Cancel" />
   </children>
</AnchorPane>
